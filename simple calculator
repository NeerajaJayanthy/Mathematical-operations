//simple calculator
#include <stdio.h>

int main()
{
  int a,b,c;
  
   printf("\nENTER A OPERATOR\n1.+\n2.-\n3.*\n4./\n");
    scanf("%d",&c);
    printf("\nENTER 2 NUMBERS");
   scanf("%d %d",&a,&b);
   switch(c)
   {
    case 1:
      printf("\n%d+%d=%d",a,b,(a+b));
      break;
    case 2:
      printf("\n%d-%d=%d",a,b,(a-b));
      break;
    case 3:
      printf("\n%d*%d=%d",a,b,(a*b));
      break;
    case 4:
      printf("\n%d/%d=%d",a,b,(a/b));
      break;
      default:
      printf("ERROR");
   }  
  return 0;
}
